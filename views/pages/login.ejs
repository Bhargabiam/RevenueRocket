    <script>
      $(document).ready(() => {
        $("#loginform").on("submit", (e) => {
          e.preventDefault();
          const formData = {
            email: $("#user-id").val(),
            password: $("#user-password").val(),
          };
          axios
            .post("http://localhost:3000/login", formData)
            .then((res) => {
              const user = res.data.user;
              if (user) {
                window.location.href = "http://localhost:3000/dashboard";
                $("#loginform")[0].reset();
              }
            })
            .catch((err) => {
              if (
                err.response &&
                err.response.data &&
                err.response.data.error === "Invalid credentials"
              ) {
                $("#submit-btn").addClass("btn-danger").prop("disabled", true);
                $("#user-id, #user-password").addClass("is-invalid");
                $("span").addClass("text-danger");
              } else {
                console.log("dakabo some thig wrong");
                $("#loginform")[0].reset();
              }
            });
        });
        $("#user-id, #user-password").on("keydown", () => {
          $("#user-id, #user-password").removeClass("is-invalid");
          $("#submit-btn").removeClass("btn-danger").prop("disabled", false);
          $("span").removeClass("text-danger");
        });
      });
